{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_new' %}

{% block title %}
         <title>{{ 'title.product_new'|trans }}</title>
{% endblock %}

{% block main %}
    <h1>{{ 'title.product_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.summary) }}
        {{ form_row(form.content) }}
        {{ form_row(form.price) }}
        {{ form_row(form.brochure) }}  
        {{ form_row(form.publishedAt) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_product'|trans }}
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_product_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_product_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}